<table class="table table-striped table-bordered">
  <tbody>
		<tr>
			<th>Id</th>
			<th><%= sort_link @q, :ip_address, t(:ip) %></th>
			<th><%= sort_link @q, :network_id, t(:network_id) %></th>
			<th><%= sort_link @q, :reserver, t(:reserver) %></th>
			<th><%= t(:action) %></th>
		</tr>
    <% @addresses.each do |address| %>
			<tr>
				<td><%= link_to address.id, address %></td>
        <td><%= address.toString %></td>
				<td><%= address.network.start_address %></td>
				<td><%= address.reserved %></td>
				<td>
					<div class="btn-group">
						<a class="btn dropdown-toggle btn-primary action-btn btn-sm" href="#" data-toggle="dropdown">
					 		<%= t('action') %>
							<span class="caret"></span>
					 	</a>
					<ul class="dropdown-menu">			
						<li>
							<%= link_to address do %>
								<span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span>
								<%= t('show') %>
							<% end %>
						</li>
				    <li>
							<%= link_to edit_address_path(address) do %>
								<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
								<%= t('edit') %>
							<% end %>
						</li>
					</ul>
					</div>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
