<div class="container">
  <div class="border-bottom clearfix mt-3">
    <div class="float-left">
      <h1><%= t(:editing_address)%> <%= @address.ip_address %></h1>
    </div>
    <div class="float-right btn-header">
      <a href="<%= addresses_path %>" class="btn btn-outline-dark">
        <i class="fas fa-angle-left"></i>
        <%= t(:back) %>
      </a>
      <a href="<%= address_path @address %>" class="btn btn-outline-dark">
        <i class="fas fa-eye"></i>
        <%= t(:show) %>
      </a>
    </div>
  </div>
  <div class="mt-3">
    <%= render 'form' %>
  </div>
</div>