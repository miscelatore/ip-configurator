<div class="container">
  <div class="clearfix mt-3 mx-3">
    <div class="float-left">
      <h1><%= t(:show_address)%> <%= @address.ip_address %></h1>
    </div>
    <div class="float-right btn-header">
      <a href="<%= addresses_path %>" class="btn btn-outline-dark">
        <i class="fas fa-angle-left"></i>
        <%= t(:back) %>
      </a>
      <a href="<%= edit_address_path @address %>" class="btn btn-outline-dark">
        <i class="fas fa-edit"></i>
        <%= t(:edit) %>
      </a>
    </div>
  </div>


  <div class="card card-default mt-3 mx-3">
    <div class="card-body">
  		<dl class="row">
  		  <dt class="col-sm-3"><%= t(:ip_address)%>:</dt>
  		  <dd class="col-sm-9"><%= @address.ip_address if @address.ip_address %></dd>
			
  			<dt class="col-sm-3"><%= t(:network)%>:</dt>
  		  <dd class="col-sm-9"><%= @address.network.name if @address.network %></dd>

  			<dt class="col-sm-3"><%= t(:reserved)%>:</dt>
  		  <dd class="col-sm-9"><%= @address.reserved %></dd>

  			<dt class="col-sm-3"><%= t(:assigned_address)%>:</dt>
  		  <dd class="col-sm-9"><%= @address.assigned_address.operator.name if @address.assigned_address %></dd>

  			<dt class="col-sm-3"><%= t(:created_at) %>:</dt>
  		  <dd class="col-sm-9"><%= @address.created_at  %></dd>

  			<dt class="col-sm-3"><%= t(:updated_at) %>:</dt>
  		  <dd class="col-sm-9"><%= @address.updated_at  %></dd>	
  		</dl>
   </div>
  </div>
</div>