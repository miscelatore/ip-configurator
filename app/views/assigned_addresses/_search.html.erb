<div class="panel panel-warning">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('search_options')%></h3>
  </div>
  <div class="panel-body">
		<%= search_form_for( @q, url: assigned_addresses_path, method: :get, html: { class: "form-inline", role: "form" }) do |f| %>
			<div class="form-group">
			    <%= f.label :hostname_cont, t('hostname') %><br />
			    <%= f.text_field :hostname_cont, value: session[:hostname_cont], class: "form-control" %>
			</div>
			<div class="form-group">
    		<%= f.label :mac_cont, t('mac') %><br />
    		<%= f.text_field :mac_cont, value: session[:mac_cont], class: "form-control" %>
	  	</div>
			<div class="form-group">
			  <%= f.label :address_ip_address_cont, t('address_id') %><br />
				<%= f.text_field :address_ip_address_cont, value: session[:address_ip_address_cont], class: "form-control" %>
			</div>
			<div class="form-group">
			  <%= f.label :operator_name_cont, t('operator_id') %><br />
				<%= f.text_field :operator_name_cont, value: session[:operator_name_cont], class: "form-control" %>
			</div>
			<div class="form-group">
	    	<%= f.label :enabled_eq, t('enabled') %><br />
				<%= f.select(:enabled_eq, %w{true false}, {include_blank: true, selected: session[:enabled_eq] }, class: "form-control" ) %>
	  	</div>
			<div class="form-group">
			  <%= f.label :hardware_id_eq, t('hardware_id') %><br />
				<%= f.select(:hardware_id_eq, Hardware.all.collect {|hw| [hw.name, hw.id]}, {include_blank: true, selected: session[:hardware_id_eq] }, class: "form-control" ) %>
			</div>
			
			<div class="form-group">
			  <%= f.label :last_seen_date_gteq, t('last_seen_date_after') %><br />
				<div class="input-group date" id="datetimepicker_after">
					<%= f.text_field :last_seen_date_gteq, size: 10, value: session[:last_seen_date_gteq], class: "form-control" %>
					<span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
				</div>
			</div>
			
			<div class="form-group">
        <%= f.label :last_seen_date_lteq, t('last_seen_date_before') %><br />
				<div class="input-group date" id="datetimepicker_before">
				  <%= f.text_field :last_seen_date_lteq, size: 10, value: session[:last_seen_date_lteqs], class: "form-control" %>
					<span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
				</div>
      </div>
      
      <%= render 'shared/per_page_results', obj_var: f %>

			<div class="form-group">
				<br>
				<%= f.submit class: 'btn btn-warning' %>
        <%= link_to t(:clear_search), assigned_addresses_path(search_cancel: true), class: "btn btn-default" %>
			</div>
		<% end %>
	</div>
</div>