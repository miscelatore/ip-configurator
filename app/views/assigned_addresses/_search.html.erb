<div class="panel panel-warning">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('search_options')%></h3>
  </div>
  <div class="panel-body">
		<%= search_form_for( @q, url: assigned_addresses_path, :method => :get, html: { class: "form-inline", role: "form" }) do |f| %>
			<div class="form-group">
			    <%= f.label :hostname_cont, t('hostname') %><br />
			    <%= f.text_field :hostname_cont, :value => session[:hostname], :class => "form-control" %>
			</div>
			<div class="form-group">
    		<%= f.label :mac_cont, t('mac') %><br />
    		<%= f.text_field :mac_cont, :value => session[:mac], :class => "form-control" %>
	  	</div>
			<div class="form-group">
			  <%= f.label :address_ip_address_cont, t('address') %><br />
				<%= f.text_field :address_ip_address_cont, :value => session[:address], :class => "form-control" %>
			</div>
			<div class="form-group">
			  <%= f.label :operator_name_cont, t('operator') %><br />
				<%= f.text_field :operator_name_cont, :value => session[:operator], :class => "form-control" %>
			</div>
			<div class="form-group">
	    	<%= f.label :enabled_eq, t('enabled') %><br />
				<%= f.select(:enabled_eq, %w{true false}, {:include_blank => true, :selected => session[:enabled] }, :class => "form-control" ) %>
	  	</div>
			<div class="form-group">
			  <%= f.label :hardware_id_eq, t('hardware') %><br />
				<%= f.select(:hardware_id_eq, Hardware.all.collect {|hw| [hw.name, hw.id]}, {:include_blank => true, :selected => session[:hardware_id] }, :class => "form-control" ) %>
			</div>
			
			<div class="form-group">
			  <%= f.label :last_seen_date_gteq, t('last_seen_date_after') %><br />
				<div class="input-group date" id="datetimepicker_after">
					<%= f.text_field :last_seen_date_gteq, :size => 10, :value => session[:last_seen_date_after], :class => "form-control" %>
					<span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
				</div>
			</div>
			
			<div class="form-group">
        <%= f.label :last_seen_date_lteq, t('last_seen_date_before') %><br />
				<div class="input-group date" id="datetimepicker_before">
				  <%= f.text_field :last_seen_date_lteq, :size => 10, :value => session[:last_seen_date_before], :class => "form-control" %>
					<span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
				</div>
      </div>

			<div class="form-group">
				<br>
				<%= f.submit class: 'btn btn-warning' %>
			</div>
		<% end %>
	</div>
</div>