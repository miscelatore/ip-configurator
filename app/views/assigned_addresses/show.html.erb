<div class="page-header clearfix">
  <div class="pull-left">
    <h1><%= t(:show_assigned_address)%> <%= @assigned_address.address.ip_address %></h1>
  </div>
  <div class="pull-right btn-header">
    <a href="<%= assigned_addresses_path %>" class="btn btn-default">
      <span class="glyphicon glyphicon-arrow-left"></span>
      <%= t(:back) %>
    </a>
    <a href="<%= edit_assigned_address_path @assigned_address %>" class="btn btn-default">
      <span class="glyphicon glyphicon-edit"></span>
      <%= t(:edit) %>
    </a>
  </div>
</div>

<div class="panel panel-info">
	<div class="panel-heading"><%= t(:operator_id) %>: <%= @assigned_address.operator.name  %></div>
  <div class="panel-body">
		<dl class="dl-horizontal text-overflow lead">
		  <dt><%= t(:address_id) %>:</dt>
		  <dd><%= @assigned_address.address.ip_address %></dd>
			<dt><%= t(:hostname) %>:</dt>
			<dd><%= @assigned_address.hostname %>.<%= @assigned_address.address.network.dns_zone %></dd>
			<dt><%= t(:hardware_type_id) %>:</dt>
			<dd><%= @assigned_address.hardware.name %></dd>
			<dt><%= t(:operator_id) %>:</dt>
			<dd><%= @assigned_address.operator.name %></dd>
			<dt><%= t(:mac) %>:</dt>
			<dd><%= @assigned_address.mac %></dd>
			<dt><%= t(:description) %>:</dt>
			<dd><%= @assigned_address.description %></dd>
			<dt><%= t(:location_port_id) %>:</dt>
			<dd><%= @assigned_address.location_port.name if @assigned_address.location_port %></dd>
			<dt><%= t(:enabled) %>:</dt>
			<dd><%= @assigned_address.enabled %></dd>
			<dt><%= t(:created_at) %>:</dt>
			<dd><%= @assigned_address.created_at %></dd>
			<dt><%= t(:updated_at) %>:</dt>
			<dd><%= @assigned_address.updated_at %></dd>
			<dt><%= t(:last_seen_date) %>:</dt>
			<dd><%= @assigned_address.last_seen_date %></dd>			
		</dl>
  </div>
</div>
