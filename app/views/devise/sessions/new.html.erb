<div class="row justify-content-md-center">
  <div class="col-3 authform">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form'}) do |f| %>
      <h3>Accedi</h3>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%- if devise_mapping.registerable? %>
          <%= link_to 'Iscriviti', new_registration_path(resource_name), class: 'float-right'  %>
        <% end -%>
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%- if devise_mapping.recoverable? %>
          <%= link_to "Ha dimenticato la password?", new_password_path(resource_name), class: 'float-right' %>
        <% end -%>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
        <%= f.submit t(:sign_in), class: 'btn btn-primary float-right' %>
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox" style="width:150px">
            <label>
              <%= f.check_box :remember_me %> Ricordami
            </label>
          </div>
        <% end -%>
    <% end %>
  </div>
</div>