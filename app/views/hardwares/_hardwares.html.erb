<table class="table table-striped table-bordered">
  <tbody>
		<tr>
			<th>Id</th>
			<th><%= sort_link @q, :name, t(:name) %></th>
			<th><%= t(:created_at) %></th>
			<th><%= t(:updated_at) %></th>
			<th><%= t(:action) %></th>
		</tr>
    <% @hardwares.each do |hardware| %>
			<tr>
        <td><%= link_to hardware.id, hardware %></td>
				<td><%= hardware.name %></td>
				<td><%= hardware.created_at %></td>
				<td><%= hardware.updated_at %></td>
				<td>
					<div class="btn-group">
						<a class="btn dropdown-toggle btn-primary action-btn btn-sm" href="#" data-toggle="dropdown">
					 		<%= t('action') %>
							<span class="caret"></span>
					 	</a>
					<ul class="dropdown-menu">
					    <li><%= link_to t('show'), hardware %></li>
					    <li><%= link_to t('edit'), edit_hardware_path(hardware) %></li>
					</ul>
					</div>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>




