<table class="table table-striped table-bordered">
  <tbody>
		<tr>
			<th>Id</th>
			<th><%= t(:name) %></th>
			<th><%= t(:created_at) %></th>
			<th><%= t(:updated_at) %></th>
			<th><%= t(:action) %></th>
		</tr>
    <% @locations.each do |location| %>
			<tr>
        <td><%= link_to location.id, location %></td>
				<td><%= location.name %></td>
				<td><%= location.created_at %></td>
				<td><%= location.updated_at %></td>
				<td>
					<div class="btn-group">
						<a class="btn dropdown-toggle btn-primary action-btn btn-sm" href="#" data-toggle="dropdown">
					 		<%= t('action') %>
							<span class="caret"></span>
					 	</a>
					<ul class="dropdown-menu">
					    <li><%= link_to t('show'), location %></li>
					    <li><%= link_to t('edit'), edit_location_path(location) %></li>
					</ul>
					</div>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>




