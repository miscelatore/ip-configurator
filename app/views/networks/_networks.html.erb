<table class="table table-striped table-bordered">
  <tbody>
		<tr>
			<th>Id</th>
			<th><%= sort_link @q, :name, t(:name) %></th>
			<th><%= sort_link @q, :start_address, t(:start_address) %></th>
			<th><%= t(:space) %></th>
			<th><%= t(:gateway) %></th>
			<th><%= t(:netmask) %></th>
			<th><%= t(:dhcp_enabled) %></th>
			<th><%= t(:action) %></th>
		</tr>
    <% @networks.each do |network| %>
			<tr>
        <td><%= link_to network.id, network %></td>
				<td><%= network.name %></td>
				<td><%= network.start_address %></td>
				<td><%= network.space %></td>
				<td><%= network.gateway %></td>
				<td><%= network.netmask %></td>
				<td><%= network.dhcp_enabled %></td>
				<td>
					<div class="btn-group">
						<a class="btn dropdown-toggle btn-primary action-btn btn-sm" href="#" data-toggle="dropdown">
					 		<%= t('action') %>
							<span class="caret"></span>
					 	</a>
					<ul class="dropdown-menu">
					    <li><%= link_to t('show'), network %></li>
					    <li><%= link_to t('edit'), edit_network_path(network) %></li>
					</ul>
					</div>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>




