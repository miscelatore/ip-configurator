<div class="panel panel-warning">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('search_options')%></h3>
  </div>
  <div class="panel-body">
		<%= search_form_for( @q, url: networks_path, :method => :get, html: { class: "form-inline", role: "form" }) do |f| %>
					<div class="form-group">
		    		<%= f.label :name_cont, t('name') %><br />
		    		<%= f.text_field :name_cont, :class => "form-control" %>
			  	</div>
					<div class="form-group">
					  <%= f.label :start_address_cont %><br />
						<%= f.text_field :start_address_cont, :class => "form-control" %>
					</div>
					<div class="form-group">
		    		<%= f.label :dhcp_enabled_eq, t('dhcp_enabled') %><br />
						<%= f.select(:dhcp_enabled_eq, %w{true false}, {:include_blank => true }, :class => "form-control" ) %>
			  	</div>
					<div class="form-group pull-right"> 		
						<%= f.submit class: 'btn btn-warning' %>
			  	</div>
		<% end %>
	</div>
</div>