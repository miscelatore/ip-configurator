<%= search_form_for @q, url: networks_path, :method => :get do |f| %>
	<table border="0" width="98%" align="center">
		<tr>
			<td>
	    		<%= f.label :name_cont, t('name') %><br />
	    		<%= f.text_field :name_cont %>
	  	</td>
			<td>
			  <%= f.label :start_address_cont %><br />
				<%= f.text_field :start_address_cont %>
			</td>
			<td>
	    		<%= f.label :dhcp_enabled_eq, t('dhcp_enabled') %><br />
					<%= f.select(:dhcp_enabled_eq, %w{true false}, {:include_blank => true } ) %>
	  	</td>
			<td rowspan="2" align="center">
	    		<div class="actions col-md-offset-2">
				    <%= f.submit class: 'btn btn-default' %>
				  </div>
	  	</td>
		</tr>
	</table>
<% end %>
<hr>