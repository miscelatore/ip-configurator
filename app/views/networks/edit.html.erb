<div class="container">
  <div class="border-bottom clearfix mt-3">
    <div class="float-left">
      <h1><%= t(:editing_network)%> <%= @network.name %></h1>
    </div>
    <div class="float-right btn-header">
      <a href="<%= networks_path %>" class="btn btn-outline-dark">
        <i class="fas fa-angle-left"></i>
        <%= t(:back) %>
      </a>
      <a href="<%= network_path @network %>" class="btn btn-outline-dark">
        <i class="fas fa-eye"></i>
        <%= t(:show) %>
      </a>
    </div>
  </div>
  <div class="mt-3">
    <%= render 'form' %>
  </div>
</div>