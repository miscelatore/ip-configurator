<div class="container">
  <div class="clearfix mt-3 mx-3">
    <div class="float-left">
      <h1><%= t(:show_address)%> <%= @network.name %></h1>
    </div>
    <div class="float-right btn-header">
      <a href="<%= networks_path %>" class="btn btn-outline-dark">
        <i class="fas fa-angle-left"></i>
        <%= t(:back) %>
      </a>
      <a href="<%= edit_network_path(@network) %>" class="btn btn-outline-dark">
        <i class="fas fa-edit"></i>
        <%= t(:edit) %>
      </a>
    </div>
  </div>

  <div class="card card-default mt-3 mx-3">
    <div class="card-body">
  		<dl class="row">
  		  <dt class="col-sm-3"><%= t(:name) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.name if @network.name %></dd>
  
  			<dt class="col-sm-3"><%= t(:start_address) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.start_address if @network.start_address %></dd>

  		  <dt class="col-sm-3"><%= t(:space) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.space if @network.space %></dd>

  		  <dt class="col-sm-3"><%= t(:gateway) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.gateway if @network.gateway %></dd>

  		  <dt class="col-sm-3"><%= t(:netmask) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.netmask if @network.netmask %></dd>

  		  <dt class="col-sm-3"><%= t(:server_dns) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.server_dns if @network.server_dns %></dd>

  		  <dt class="col-sm-3"><%= t(:dhcp_enabled) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.dhcp_enabled %></dd>

  		  <dt class="col-sm-3"><%= t(:dns_zone) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.dns_zone if @network.dns_zone %></dd>

  		  <dt class="col-sm-3"><%= t(:pxefile) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.pxefile if @network.pxefile %></dd>

  		  <dt class="col-sm-3"><%= t(:default_lease_time) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.default_lease_time if @network.default_lease_time %></dd>

  		  <dt class="col-sm-3"><%= t(:max_lease_time) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.max_lease_time if @network.max_lease_time %></dd>
  
  		  <dt class="col-sm-3"><%= t(:netbios_name_servers) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.netbios_name_servers if @network.netbios_name_servers %></dd>
 
  		  <dt class="col-sm-3"><%= t(:netbios_node_type) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.netbios_node_type if @network.netbios_node_type %></dd>

  		  <dt class="col-sm-3"><%= t(:ntp_servers) %>:</dt>
  		  <dd class="col-sm-9"><%= @network.ntp_servers if @network.ntp_servers %></dd>
  		</dl>
   </div>
  </div>
	


  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-info">
      <div class="panel-heading" role="tab" id="headingOne">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            <h4 class="panel-title"><%= t(:addresses) %><span class="caret"></span></h4>
          </a>
        </h4>
      </div>
      <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
        <div class="panel-body">
          <div class="table-responsive">
  					<table class="table table-striped table-hover">
  					  <tbody>
  							<tr>
  								<th><%= t(:ip) %></th>
  								<th><%= t(:reserverd) %></th>
  								<th><%= t(:action) %></th>
  							</tr>
  							<% @network.addresses.sorted.each do |address| %>
  								<tr>
  									<td><%= address.toString %></td>
  									<td><%= address.reserved %></td>
  									<td>
  										<div class="btn-group">
  											<a class="btn dropdown-toggle btn-primary action-btn btn-sm" href="#" data-toggle="dropdown">
  										 		<%= t('action') %>
  												<span class="caret"></span>
  										 	</a>
  										<ul class="dropdown-menu">
  												<li>
  													<%= link_to address do %>
  														<span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span>
  														<%= t('show') %>
  													<% end %>
  												</li>
  										    <li>
  													<%= link_to edit_address_path(address) do %>
  														<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
  														<%= t('edit') %>
  													<% end %>
  												</li>
  										</ul>
  										</div>
  									</td>
  							  </tr>
  							<% end %>
  					  </tbody>
  					</table>
  				</div>
        </div>
      </div>
    </div>
  </div>
</div>