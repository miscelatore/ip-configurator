<div class="page-header clearfix">
  <div class="pull-left">
    <h1>Show network</h1>
  </div>
  <div class="pull-right btn-header">
    <a href="<%= networks_path %>" class="btn btn-default">
      <span class="glyphicon glyphicon-arrow-left"></span>
      Back
    </a>
    <a href="<%= edit_network_path(@network) %>" class="btn btn-default">
      <span class="glyphicon glyphicon-eye-open"></span>
      Edit
    </a>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">
		<dl class="dl-horizontal">
		  <dt><%= t(:name) %>:</dt>
		  <dd><%= @network.name if @network.name %></dd>
  
			<dt><%= t(:start_address) %>:</dt>
		  <dd><%= @network.start_address if @network.start_address %></dd>

		  <dt><%= t(:space) %>:</dt>
		  <dd><%= @network.space if @network.space %></dd>

		  <dt><%= t(:gateway) %>:</dt>
		  <dd><%= @network.gateway if @network.gateway %></dd>

		  <dt><%= t(:netmask) %>:</dt>
		  <dd><%= @network.netmask if @network.netmask %></dd>

		  <dt><%= t(:server_dns) %>:</dt>
		  <dd><%= @network.server_dns if @network.server_dns %></dd>

		  <dt><%= t(:dhcp_enabled) %>:</dt>
		  <dd><%= @network.dhcp_enabled %></dd>

		  <dt><%= t(:dns_zone) %>:</dt>
		  <dd><%= @network.dns_zone if @network.dns_zone %></dd>

		  <dt><%= t(:pxefile) %>:</dt>
		  <dd><%= @network.pxefile if @network.pxefile %></dd>

		  <dt><%= t(:default_lease_time) %>:</dt>
		  <dd><%= @network.default_lease_time if @network.default_lease_time %></dd>

		  <dt><%= t(:max_lease_time) %>:</dt>
		  <dd><%= @network.max_lease_time if @network.max_lease_time %></dd>
  
		  <dt><%= t(:netbios_name_servers) %>:</dt>
		  <dd><%= @network.netbios_name_servers if @network.netbios_name_servers %></dd>
 
		  <dt><%= t(:netbios_node_type) %>:</dt>
		  <dd><%= @network.netbios_node_type if @network.netbios_node_type %></dd>

		  <dt><%= t(:ntp_servers) %>:</dt>
		  <dd><%= @network.ntp_servers if @network.ntp_servers %></dd>
		</dl>
 </div>
</div>
	


<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-info">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          <h4 class="panel-title"><%= t(:addresses) %><span class="caret"></span></h4>
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
        <div class="table-responsive">
					<table class="table table-striped table-hover">
					  <tbody>
							<tr>
								<th><%= t(:ip) %></th>
								<th><%= t(:reserverd) %></th>
								<th><%= t(:action) %></th>
							</tr>
							<% @network.addresses.sorted.each do |address| %>
								<tr>
									<td><%= address.toString %></td>
									<td><%= address.reserved %></td>
									<td>
										<div class="btn-group">
											<a class="btn dropdown-toggle btn-primary action-btn btn-sm" href="#" data-toggle="dropdown">
										 		<%= t('action') %>
												<span class="caret"></span>
										 	</a>
										<ul class="dropdown-menu">
												<li>
													<%= link_to address do %>
														<span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span>
														<%= t('show') %>
													<% end %>
												</li>
										    <li>
													<%= link_to edit_address_path(address) do %>
														<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
														<%= t('edit') %>
													<% end %>
												</li>
										</ul>
										</div>
									</td>
							  </tr>
							<% end %>
					  </tbody>
					</table>
				</div>
      </div>
    </div>
  </div>
</div>
