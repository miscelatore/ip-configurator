<div class="container">
  <div class="page-header clearfix">
    <div class="pull-left">
      <h1><%= t(:show_operator) %></h1>
    </div>
    <div class="pull-right btn-header">
      <a href="<%= operators_path %>" class="btn btn-default">
        <span class="glyphicon glyphicon-arrow-left"></span>
         <%= t(:back) %>
      </a>
      <a href="<%= edit_operator_path @operator %>" class="btn btn-default">
        <span class="glyphicon glyphicon-eye-open"></span>
        <%= t(:edit) %>
      </a>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-body">
  		<dl class="dl-horizontal lead">
  		  <dt><%= t(:id) %>:</dt>
  		  <dd><%= @operator.id  %></dd>
  		  <dt><%= t(:name) %>:</dt>
  		  <dd><%= @operator.name  %></dd>
  		  <dt><%= t(:created_at) %>:</dt>
  		  <dd><%= @operator.created_at  %></dd>
  		  <dt><%= t(:updated_at) %>:</dt>
  		  <dd><%= @operator.updated_at  %></dd>
  		</dl>
   </div>
  </div>		

  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-info">
      <div class="panel-heading" role="tab" id="headingOne">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            <h4 class="panel-title"><%= t(:assigned_addresses) %><span class="caret"></span></h4>
          </a>
        </h4>
      </div>
      <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
        <div class="panel-body">
          <div class="table-responsive">
  					<table class="table table-striped table-hover">
  					  <tbody>
  							<tr>
  								<th><%= t(:mac_address) %></th>
  								<th><%= t(:ip) %></th>
  								<th><%= t(:hostname) %></th>
  								<th><%= t(:domain) %></th>
  								<th><%= t(:action) %></th>
  							</tr>
  							<% @operator.assigned_addresses.each do |assigned_address| %>
  								<tr>
  									<td>
  										<%= link_to assigned_address.mac, assigned_address_path(assigned_address.id) %>
  										</td>
  									<td><%= assigned_address.address.ip_address %></td>
  									<td><%= assigned_address.hostname %></td>
  									<td><%= assigned_address.address.network.dns_zone %></td>
  									<td>
  										<div class="btn-group">
  											<a class="btn dropdown-toggle btn-primary action-btn btn-sm" href="#" data-toggle="dropdown">
  										 		<%= t('action') %>
  												<span class="caret"></span>
  										 	</a>
  										<ul class="dropdown-menu">												
  												<li>
  													<%= link_to assigned_address do %>
  														<span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span>
  														<%= t('show') %>
  													<% end %>
  												</li>
  										    <li>
  													<%= link_to edit_assigned_address_path(assigned_address) do %>
  														<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
  														<%= t('edit') %>
  													<% end %>
  												</li>
  												<li>
  													<%= link_to assigned_address, method: :delete, data: { confirm: t(:are_you_sure) } do %>
  														<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
  														<%= t('destroy') %>
  													<% end %>
  												</li>
  										</ul>
  										</div>
  									</td>
  							  </tr>
  							<% end %>
  					  </tbody>
  					</table>
  				</div>
        </div>
      </div>
    </div>
  </div>
</div>