<div class="container">
  
	<div class="page-header clearfix">
	  <div class="pull-left">
	    <h1>Listing Roles</h1>
	  </div>
	  <div class="pull-right btn-header">
	    <a href="<%= new_role_path %>" class="btn btn-primary">
	      <span class="glyphicon glyphicon-plus"></span>
	      New Role
	    </a>
	  </div>
	</div>
	
	<div class="row">
	  <div class="column">
	    <%= render 'search' %>
	  </div>
	</div>

	<div class="row">
	  <div class="column">
	    <%= render 'roles' %>
	  </div>
	</div>
	
	<%= paginate @roles %>

</div>